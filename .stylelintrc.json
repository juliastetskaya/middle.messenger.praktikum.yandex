{
    "extends": "stylelint-config-standard",
    "rules": {
        "color-hex-case": "lower",
        "indentation": 4,
        "selector-class-pattern": "^(?:(?:o|c|u|t|s|is|has|_|js|qa)-)?[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:\\[.+\\])?$",
        "color-function-notation": "legacy"
    },
    "ignoreFiles": [
        "dist/*"
    ]
} 
